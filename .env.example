# AI Employee System Configuration
# Copy this file to .env and fill in your actual credentials

# OpenRouter API Configuration (replaces CLAUDE_API_KEY)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Email Configuration (for Gmail watcher)
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_SMTP_SERVER=smtp.gmail.com

# WhatsApp Configuration (for Playwright-based watcher)
WHATSAPP_SESSION_FILE_PATH=path/to/whatsapp/session

# File System Watcher Configuration
WATCHED_DIRECTORIES=/path/to/watch1,/path/to/watch2

# Security Settings
DRY_RUN=false  # Set to false only when ready for actual actions
LOG_LEVEL=INFO

# MCP Servers Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000

# Vault Path
VAULT_PATH=./vault